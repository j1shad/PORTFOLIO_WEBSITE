---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allPosts.sort((a, b) =>
  b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<Layout title="Blog - Jason Acquah">
  <main class="min-h-screen bg-background pt-20 sm:pt-32 pb-20">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <header class="mb-12 sm:mb-16 animate-fade-in">
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-foreground mb-4">
            Blog
          </h1>
          <p class="text-lg text-muted-foreground">
            Thoughts on data engineering, analytics, and building scalable systems
          </p>
        </header>

        <div class="space-y-6 sm:space-y-8">
          {sortedPosts.map((post, index) => (
            <article class={`bg-card border border-border rounded-lg overflow-hidden hover-lift hover:border-primary/50 transition-all duration-300 ${index % 2 === 0 ? 'animate-slide-in-left' : 'animate-slide-in-right'}`} style={`animation-delay: ${index * 0.1}s`}>
              <a href={`${base}/blog/${post.slug}`} class="block">
                <div class="p-4 sm:p-6">
                  <div class="flex items-center gap-3 mb-3">
                    <time class="text-sm text-muted-foreground">
                      {formatDate(post.data.publishDate)}
                    </time>
                    <span class="text-muted-foreground">â€¢</span>
                    <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded-full">
                      {post.data.category}
                    </span>
                  </div>

                  <h2 class="text-xl sm:text-2xl font-bold text-foreground mb-3 hover:text-primary transition-colors">
                    {post.data.title}
                  </h2>

                  <p class="text-muted-foreground mb-4 line-clamp-2">
                    {post.data.description}
                  </p>

                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="px-3 py-1 bg-secondary text-secondary-foreground rounded-full text-xs">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>

        {sortedPosts.length === 0 && (
          <div class="text-center py-12">
            <p class="text-muted-foreground text-lg">
              No blog posts yet. Check back soon!
            </p>
          </div>
        )}
      </div>
    </div>
  </main>
</Layout>
