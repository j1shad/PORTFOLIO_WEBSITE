---
import Layout from '../../layouts/Layout.astro';
import Loader from '../../components/Loader.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Blog - Jason Acquah">
  <Loader />
</Layout>

<script define:vars={{ base }}>
  // Redirect to under construction page after showing loader
  setTimeout(() => {
    window.location.href = `${base}/under-construction?from=blog`;
  }, 4000);
</script>
