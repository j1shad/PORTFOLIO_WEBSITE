---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';

const projects = [
  {
    title: "Real-Time Data Pipeline",
    description: "Scalable streaming data pipeline processing millions of events daily using Kafka and Spark. Implemented efficient data transformations and real-time analytics with sub-second latency.",
    technologies: ["Apache Kafka", "Spark Streaming", "Python", "AWS", "PostgreSQL"],
    githubUrl: "https://github.com/jasonacquah/data-pipeline"
  },
  {
    title: "Data Lake Architecture",
    description: "Designed and implemented a modern data lake on AWS with efficient data partitioning, cataloging, and governance. Enables self-service analytics for multiple teams.",
    technologies: ["AWS S3", "Glue", "Athena", "Lake Formation", "Terraform"],
    githubUrl: "https://github.com/jasonacquah/data-lake"
  },
  {
    title: "ETL Orchestration Platform",
    description: "Built robust ETL pipelines using Apache Airflow for orchestrating complex data workflows. Automated data quality checks and monitoring across multiple data sources.",
    technologies: ["Apache Airflow", "Python", "Docker", "PostgreSQL", "AWS"],
    githubUrl: "https://github.com/jasonacquah/etl-platform"
  },
  {
    title: "Distributed Data Processing",
    description: "Designed scalable data processing framework using Spark for batch and streaming workloads. Optimized performance for processing terabytes of data efficiently.",
    technologies: ["Apache Spark", "Scala", "Databricks", "Delta Lake", "AWS"],
    githubUrl: "https://github.com/jasonacquah/spark-processing"
  }
];
---

<Layout title="Data Engineering Projects - Jason Acquah">
  <div class="min-h-screen bg-background pt-32 pb-20">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="mb-8 animate-fade-in">
          <a href="/projects" class="inline-flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Projects
          </a>
        </div>

        <header class="mb-16 animate-fade-in">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-16 h-16 bg-gradient-to-br from-primary/20 to-accent/10 rounded-2xl flex items-center justify-center shadow-purple-lg">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </div>
            <div>
              <h1 class="text-4xl md:text-5xl font-bold text-foreground">
                Data Engineering
              </h1>
              <p class="text-lg text-muted-foreground mt-2">
                Building scalable data infrastructure and pipelines
              </p>
            </div>
          </div>
        </header>

        <div class="grid md:grid-cols-2 gap-8">
          {projects.map((project, index) => (
            <div class={`bg-card border border-border rounded-xl overflow-hidden shadow-purple-md hover-lift transition-smooth animate-scale-in`} style={`animation-delay: ${index * 0.1}s`}>
              <div class="h-48 bg-gradient-to-br from-primary/10 via-primary/5 to-accent/10 flex items-center justify-center border-b border-border relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-primary/5 to-transparent animate-pulse"></div>
                <div class="relative text-primary/30 text-6xl font-bold">
                  {index + 1}
                </div>
              </div>

              <div class="p-6">
                <h3 class="text-xl font-bold text-foreground mb-3">
                  {project.title}
                </h3>

                <p class="text-muted-foreground mb-4 leading-relaxed text-sm">
                  {project.description}
                </p>

                <div class="flex flex-wrap gap-2 mb-6">
                  {project.technologies.map((tech) => (
                    <span class="px-3 py-1 bg-secondary text-secondary-foreground rounded-full text-xs shadow-purple-sm transition-smooth hover:shadow-purple-md hover:scale-105">
                      {tech}
                    </span>
                  ))}
                </div>

                <div class="flex gap-4">
                  <a
                    href={project.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group flex items-center gap-2 text-muted-foreground hover:text-primary transition-smooth"
                  >
                    <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                    </svg>
                    View Code
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
  <Footer />
</Layout>
