---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import TechIcon from "../../components/TechIcon";

const base = import.meta.env.BASE_URL;

const projects = [
  {
    title: "Customer Analytics Platform",
    description:
      "End-to-end analytics solution with automated ETL pipelines, dimensional modeling, and interactive dashboards. Reduced reporting time by 70% and improved data quality.",
    technologies: ["Airflow", "dbt", "Snowflake", "Tableau", "Python"],
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&h=400&fit=crop",
    githubUrl: "https://github.com/j1shad/analytics-platform",
  },
  {
    title: "Sales Performance Dashboard",
    description:
      "Built comprehensive sales analytics dashboard with real-time KPI tracking, trend analysis, and predictive insights. Integrated multiple data sources for unified reporting.",
    technologies: ["Power BI", "SQL Server", "Python", "Excel", "DAX"],
    image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=400&fit=crop",
    githubUrl: "https://github.com/j1shad/sales-dashboard",
  },
  {
    title: "Marketing Attribution Analysis",
    description:
      "Developed multi-touch attribution model to analyze marketing campaign effectiveness across channels. Provided actionable insights for marketing budget optimization.",
    technologies: ["Python", "Pandas", "Tableau", "Google Analytics", "SQL"],
    image: "https://images.unsplash.com/photo-1543286386-713bdd548da4?w=800&h=400&fit=crop",
    githubUrl: "https://github.com/j1shad/attribution-analysis",
  },
];
---

<Layout title="Data Analytics Projects - Jason Acquah">
  <div class="min-h-screen bg-background pt-20 sm:pt-32 pb-20">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="max-w-6xl mx-auto">
        <div class="mb-8 animate-fade-in">
          <a
            href={`${base}/projects`}
            class="inline-flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Projects
          </a>
        </div>

        <header class="mb-12 sm:mb-16 animate-fade-in">
          <div class="flex items-center gap-4 mb-4">
            <div
              class="w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-br from-blue-500/20 to-primary/10 rounded-2xl flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 sm:w-8 sm:h-8 text-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                ></path>
              </svg>
            </div>
            <div>
              <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-foreground">
                Data Analytics
              </h1>
              <p class="text-lg text-muted-foreground mt-2">
                Transforming data into actionable insights
              </p>
            </div>
          </div>
        </header>

        <div class="grid md:grid-cols-2 gap-6 md:gap-8">
          {
            projects.map((project, index) => (
              <div
                class={`bg-card border border-border rounded-xl overflow-hidden hover-lift transition-smooth animate-scale-in`}
                style={`animation-delay: ${index * 0.1}s`}
              >
                <div class="h-40 sm:h-48 border-b border-border relative overflow-hidden">
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>

                <div class="p-4 sm:p-6">
                  <h3 class="text-lg sm:text-xl font-bold text-foreground mb-3">
                    {project.title}
                  </h3>

                  <p class="text-muted-foreground mb-4 leading-relaxed text-sm">
                    {project.description}
                  </p>

                  <div class="flex flex-wrap gap-3 mb-6">
                    {project.technologies.map((tech) => (
                      <TechIcon techName={tech} size={32} client:load />
                    ))}
                  </div>

                  <div class="flex gap-4">
                    <a
                      href={project.githubUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="group flex items-center gap-2 text-muted-foreground hover:text-primary transition-smooth"
                    >
                      <svg
                        class="w-4 h-4 group-hover:scale-110 transition-transform"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      View Code
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
  <Footer />
</Layout>
