        </div>

        <div
          class="absolute bottom-12 left-1/2 transform -translate-x-1/2 animate-bounce"
        >
          <a href="/about" aria-label="Scroll down">
            <svg
              class="w-6 h-6 text-muted-foreground"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </div>
  <Footer />
</Layout>

<style>
  @keyframes gradient {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient {
    background-size: 200% auto;
    animation: gradient 3s ease infinite;
  }

  @keyframes fadeInOut {
    0%,
    100% {
      opacity: 0;
      transform: translateY(10px);
    }
    10%,
    90% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .role-fade {
    animation: fadeInOut 3s ease-in-out;
  }
</style>

<script>
  const roles = ["Data Engineering", "Data Analysis", "Data Science"];
  let currentRoleIndex = 0;
  const roleElement = document.getElementById("cycling-role");

  function updateRole() {
    if (roleElement) {
      roleElement.classList.add("role-fade");
      roleElement.textContent = roles[currentRoleIndex];

      currentRoleIndex = (currentRoleIndex + 1) % roles.length;

      setTimeout(() => {
        roleElement.classList.remove("role-fade");
      }, 3000);
    }
  }

  updateRole();
  setInterval(updateRole, 3000);
</script>
