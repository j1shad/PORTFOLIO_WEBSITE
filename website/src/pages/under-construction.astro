---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const { base = '' } = Astro.site ? { base: import.meta.env.BASE_URL.replace(/\/$/, '') } : {};
---

<Layout
  title="Under Construction | Jason Acquah"
  description="This page is currently under construction. Check back soon!"
>
  <div class="under-construction-container">
    <!-- Video Background -->
    <video
      autoplay
      loop
      muted
      playsinline
      class="video-background"
    >
      <source src={`${base}/assets/under-construction.mp4`} type="video/mp4" />
      Your browser does not support the video tag.
    </video>

    <!-- Overlay -->
    <div class="overlay"></div>

    <!-- Content -->
    <div class="content">
      <h1 class="animated-title">
        <span class="gradient-text">Under Construction</span>
      </h1>
      <p class="subtitle">
        This page is being built<span class="animated-dots"></span>
      </p>
      <p class="message">Check back soon for exciting updates!</p>
      <a href={`${base}/`} class="back-home">
        Back to Home
      </a>
    </div>
  </div>
</Layout>

<style>
  .under-construction-container {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .video-background {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
    z-index: 0;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  :global(.dark) .overlay {
    background: rgba(0, 0, 0, 0.6);
  }

  .content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
    animation: fadeInUp 1s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animated-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 900;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    animation: slideIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .gradient-text {
    color: #A855F7;
    background: linear-gradient(
      135deg,
      #5227FF 0%,
      #A855F7 50%,
      #06B6D4 100%
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -moz-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    -moz-text-fill-color: transparent;
    animation: gradientShift 3s ease infinite;
  }

  :global(.dark) .gradient-text {
    color: #C084FC;
    background: linear-gradient(
      135deg,
      #A855F7 0%,
      #C084FC 50%,
      #22D3EE 100%
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -moz-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    -moz-text-fill-color: transparent;
    animation: gradientShift 3s ease infinite;
  }

  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .subtitle {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 1rem;
    font-weight: 600;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    animation: pulse 2s ease-in-out infinite;
  }

  :global(.dark) .subtitle {
    color: rgba(255, 255, 255, 1);
    text-shadow: 0 3px 15px rgba(0, 0, 0, 0.8), 0 0 30px rgba(168, 85, 247, 0.3);
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  .animated-dots::after {
    content: '';
    animation: dots 1.5s steps(4, end) infinite;
  }

  @keyframes dots {
    0%, 20% {
      content: '';
    }
    40% {
      content: '.';
    }
    60% {
      content: '..';
    }
    80%, 100% {
      content: '...';
    }
  }

  .message {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    animation: fadeIn 1.5s ease-out 0.5s both;
  }

  :global(.dark) .message {
    color: rgba(255, 255, 255, 1);
    text-shadow: 0 3px 12px rgba(0, 0, 0, 0.8), 0 0 25px rgba(168, 85, 247, 0.2);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .back-home {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: white;
    background: linear-gradient(135deg, #5227FF, #A855F7);
    border-radius: 9999px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(82, 39, 255, 0.4);
    animation: fadeIn 1.5s ease-out 1s both;
    position: relative;
    overflow: hidden;
  }

  :global(.dark) .back-home {
    background: linear-gradient(135deg, #A855F7, #C084FC);
    box-shadow: 0 4px 15px rgba(168, 85, 247, 0.4);
  }

  .back-home::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .back-home:hover::before {
    left: 100%;
  }

  .back-home:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 6px 20px rgba(82, 39, 255, 0.6);
  }

  :global(.dark) .back-home:hover {
    box-shadow: 0 6px 20px rgba(168, 85, 247, 0.6);
  }

  .back-home:active {
    transform: translateY(0) scale(1);
  }

  /* Mobile Optimizations */
  @media (max-width: 768px) {
    .content {
      padding: 1.5rem;
    }

    .animated-title {
      margin-bottom: 1rem;
    }

    .subtitle {
      margin-bottom: 0.75rem;
    }

    .message {
      margin-bottom: 1.5rem;
    }

    .back-home {
      padding: 0.875rem 2rem;
      font-size: 1rem;
    }
  }

  /* Ensure video covers on mobile */
  @media (max-width: 768px) and (orientation: portrait) {
    .video-background {
      width: 100%;
      height: auto;
      min-height: 100%;
    }
  }
</style>
