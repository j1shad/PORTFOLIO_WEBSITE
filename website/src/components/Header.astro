---
import ThemeToggle from './ThemeToggle.astro';
---
<header class="fixed top-0 left-0 right-0 z-50 bg-[#F8FAFB]/80 dark:bg-[#101728]/80 backdrop-blur-md border-b border-[#E2E8F0] dark:border-[#222B3A]">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="#home" class="text-2xl font-bold text-[#1E293B] dark:text-[#F1F5F9] hover:text-[#2563EB] dark:hover:text-[#60A5FA] transition-colors">
        Portfolio
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        <a href="#about" class="text-[#64748B] dark:text-[#94A3B8] hover:text-[#2563EB] dark:hover:text-[#60A5FA] transition-colors">About</a>
        <a href="#projects" class="text-[#64748B] dark:text-[#94A3B8] hover:text-[#2563EB] dark:hover:text-[#60A5FA] transition-colors">Projects</a>
        <a href="#contact" class="text-[#64748B] dark:text-[#94A3B8] hover:text-[#2563EB] dark:hover:text-[#60A5FA] transition-colors">Contact</a>
        <ThemeToggle />
      </div>

      <div class="md:hidden flex items-center space-x-4">
        <ThemeToggle />
        <button id="mobile-menu-button" class="text-[#64748B] dark:text-[#94A3B8] hover:text-[#2563EB] dark:hover:text-[#60A5FA] transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <div class="flex flex-col space-y-4">
        <a href="#about" class="text-[#64748B] dark:text-[#94A3B8] hover:text-[#2563EB] dark:hover:text-[#60A5FA] transition-colors">About</a>
        <a href="#projects" class="text-[#64748B] dark:text-[#94A3B8] hover:text-[#2563EB] dark:hover:text-[#60A5FA] transition-colors">Projects</a>
        <a href="#contact" class="text-[#64748B] dark:text-[#94A3B8] hover:text-[#2563EB] dark:hover:text-[#60A5FA] transition-colors">Contact</a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>