<!-- PDF Viewer Modal -->
<div id="pdf-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-background/80 backdrop-blur-sm">
  <div class="relative w-full h-full max-w-7xl max-h-[90vh] m-4 bg-card border border-border rounded-xl shadow-purple-xl overflow-hidden">
    <div class="flex items-center justify-between p-4 border-b border-border bg-card/95 backdrop-blur-sm">
      <h3 id="modal-title" class="text-xl font-bold text-foreground">Certificate</h3>
      <button
        id="close-modal"
        class="p-2 text-muted-foreground hover:text-primary transition-colors rounded-lg hover:bg-secondary"
        aria-label="Close"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="h-[calc(100%-4rem)]">
      <iframe
        id="pdf-viewer"
        class="w-full h-full"
        type="application/pdf"
      ></iframe>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('pdf-modal');
  const modalTitle = document.getElementById('modal-title');
  const pdfViewer = document.getElementById('pdf-viewer') as HTMLIFrameElement;
  const closeModal = document.getElementById('close-modal');
  const certButtons = document.querySelectorAll('.cert-button');

  certButtons.forEach(button => {
    button.addEventListener('click', () => {
      const pdfUrl = button.getAttribute('data-cert-pdf');
      const title = button.getAttribute('data-cert-title');

      if (pdfUrl && title && modalTitle && pdfViewer && modal) {
        modalTitle.textContent = title;
        pdfViewer.src = pdfUrl;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
      }
    });
  });

  closeModal?.addEventListener('click', () => {
    if (modal && pdfViewer) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      pdfViewer.src = '';
      document.body.style.overflow = '';
    }
  });

  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      if (pdfViewer) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        pdfViewer.src = '';
        document.body.style.overflow = '';
      }
    }
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
      if (pdfViewer) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        pdfViewer.src = '';
        document.body.style.overflow = '';
      }
    }
  });
</script>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(12deg);
    }
    50% {
