---

<section id="projects" class="min-h-screen py-20 pt-32 bg-background">
  <div class="container mx-auto px-6">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-center text-foreground mb-4 animate-fade-in">
        Featured Projects
      </h2>
      <p class="text-center text-muted-foreground mb-16 animate-slide-in-left">
        Building data solutions that scale and deliver value
      </p>

      <div class="grid md:grid-cols-2 gap-8">
        {projects.map((project, index) => (
          <div class="bg-card border border-border rounded-xl overflow-hidden shadow-purple-md hover-lift transition-smooth animate-scale-in" style={`animation-delay: ${index * 0.1}s`}>
            <div class="h-48 bg-gradient-to-br from-primary/10 via-primary/5 to-accent/10 flex items-center justify-center border-b border-border relative overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-primary/5 to-transparent animate-pulse"></div>
              <div class="relative text-primary/30 text-6xl font-bold">
                {index + 1}
              </div>
            </div>

            <div class="p-6">
              <div class="flex items-center gap-2 mb-3">
                <h3 class="text-xl font-bold text-foreground">
                  {project.title}
                </h3>
                <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded-full shadow-purple-sm">
                  {project.category}
                </span>
              </div>

              <p class="text-muted-foreground mb-4 leading-relaxed text-sm">
                {project.description}
              </p>

              <div class="flex flex-wrap gap-2 mb-6">
                {project.technologies.map((tech) => (
                  <span class="px-3 py-1 bg-secondary text-secondary-foreground rounded-full text-xs shadow-purple-sm transition-smooth hover:shadow-purple-md hover:scale-105">
                    {tech}
                  </span>
                ))}
              </div>

              <div class="flex gap-4">
                <a
                  href={project.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex items-center gap-2 text-muted-foreground hover:text-primary transition-smooth"
                >
                  <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
