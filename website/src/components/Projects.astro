  {
    title: "Real-Time Data Pipeline",
    description: "Scalable streaming data pipeline processing millions of events daily using Kafka and Spark. Implemented efficient data transformations and real-time analytics with sub-second latency.",
    technologies: ["Apache Kafka", "Spark Streaming", "Python", "AWS", "PostgreSQL"],
    category: "Data Engineering",
    image: "/api/placeholder/400/250",
    githubUrl: "https://github.com/jasonacquah/data-pipeline"
  },
  {
    title: "Customer Analytics Platform",
    description: "End-to-end analytics solution with automated ETL pipelines, dimensional modeling, and interactive dashboards. Reduced reporting time by 70% and improved data quality.",
    technologies: ["Airflow", "dbt", "Snowflake", "Tableau", "Python"],
    category: "Analytics",
    image: "/api/placeholder/400/250",
    githubUrl: "https://github.com/jasonacquah/analytics-platform"
  },
  {
    title: "ML Model Deployment Pipeline",
    description: "Automated ML model training and deployment pipeline with monitoring and A/B testing capabilities. Handles feature engineering, model versioning, and serving predictions at scale.",
    technologies: ["MLflow", "Docker", "FastAPI", "Scikit-learn", "AWS"],
    category: "Machine Learning",
    image: "/api/placeholder/400/250",
    githubUrl: "https://github.com/jasonacquah/ml-pipeline"
