---
import TechIcon from './TechIcon';

const projects = [
  {
    title: "Real-Time Data Pipeline",
    description:
      "Scalable streaming data pipeline processing millions of events daily using Kafka and Spark. Implemented efficient data transformations and real-time analytics with sub-second latency.",
    technologies: [
      "Apache Kafka",
      "Spark Streaming",
      "Python",
      "AWS",
      "PostgreSQL",
    ],
    category: "Data Engineering",
    image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=400&fit=crop",
    githubUrl: "https://github.com/j1shad/data-pipeline",
  },
  {
    title: "Customer Analytics Platform",
    description:
      "End-to-end analytics solution with automated ETL pipelines, dimensional modeling, and interactive dashboards. Reduced reporting time by 70% and improved data quality.",
    technologies: ["Airflow", "dbt", "Snowflake", "Tableau", "Python"],
    category: "Analytics",
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&h=400&fit=crop",
    githubUrl: "https://github.com/j1shad/analytics-platform",
  },
  {
    title: "ML Model Deployment Pipeline",
    description:
      "Automated ML model training and deployment pipeline with monitoring and A/B testing capabilities. Handles feature engineering, model versioning, and serving predictions at scale.",
    technologies: ["MLflow", "Docker", "FastAPI", "Scikit-learn", "AWS"],
    category: "Machine Learning",
    image: "https://images.unsplash.com/photo-1555949963-aa79dcee981c?w=800&h=400&fit=crop",
    githubUrl: "https://github.com/j1shad/ml-pipeline",
  },
  {
    title: "Data Lake Architecture",
    description:
      "Designed and implemented a modern data lake on AWS with efficient data partitioning, cataloging, and governance. Enables self-service analytics for multiple teams.",
    technologies: ["AWS S3", "Glue", "Athena", "Lake Formation", "Terraform"],
    category: "Data Engineering",
    image: "https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=800&h=400&fit=crop",
    githubUrl: "https://github.com/j1shad/data-lake",
  },
];
---

<section id="projects" class="min-h-screen py-20 pt-32 bg-background">
  <div class="container mx-auto px-6">
    <div class="max-w-6xl mx-auto">
      <h2
        class="text-4xl md:text-5xl font-bold text-center text-foreground mb-4 animate-fade-in"
      >
        Featured Projects
      </h2>
      <p class="text-center text-muted-foreground mb-16 animate-slide-in-left">
        Building data solutions that scale and deliver value
      </p>

      <div class="grid md:grid-cols-2 gap-8">
        {
          projects.map((project, index) => (
            <div
              class="bg-card border border-border rounded-xl overflow-hidden hover-lift transition-smooth animate-scale-in"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="h-40 sm:h-48 border-b border-border relative overflow-hidden">
                <img
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>

              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  <h3 class="text-xl font-bold text-foreground">
                    {project.title}
                  </h3>
                  <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded-full">
                    {project.category}
                  </span>
                </div>

                <p class="text-muted-foreground mb-4 leading-relaxed text-sm">
                  {project.description}
                </p>

                <div class="flex flex-wrap gap-3 mb-6">
                  {project.technologies.map((tech) => (
                    <TechIcon techName={tech} size={32} client:load />
                  ))}
                </div>

                <div class="flex gap-4">
                  <a
                    href={project.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group flex items-center gap-2 text-muted-foreground hover:text-primary transition-smooth"
                  >
                    <svg
                      class="w-4 h-4 group-hover:scale-110 transition-transform"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    View Code
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
