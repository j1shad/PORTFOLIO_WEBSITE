---
// Loader component with bubble animation
---

<div class="loader-container">
  <div class="Strich1">
    <div class="Strich2">
      <div class="bubble"></div>
      <div class="bubble1"></div>
      <div class="bubble2"></div>
      <div class="bubble3"></div>
      <div class="bubble4"></div>
    </div>
  </div>
</div>

<style>
  .loader-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    z-index: 9999;
    animation: fadeIn 0.3s ease-out;
  }

  :global(.dark) .loader-container {
    background: rgba(0, 0, 0, 0.95);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .Strich1 {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .Strich2 {
    width: 60px;
    height: 60px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @keyframes dropAndShift {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
      opacity: 1;
    }
    25% {
      transform: translateY(15px) translateX(-5px);
      opacity: 0.8;
    }
    50% {
      transform: translateY(30px) translateX(0px);
      opacity: 0.6;
    }
    75% {
      transform: translateY(15px) translateX(5px);
      opacity: 0.8;
    }
  }

  .bubble {
    position: absolute;
    top: 0;
    width: 20px;
    height: 20px;
    background: radial-gradient(circle at 30% 30%, #ffb3b3, #e64949, #ff8787);
    border-radius: 50%;
    left: 20px;
    animation: dropAndShift 5s ease-in-out infinite;
    z-index: 1;
  }

  :global(.dark) .bubble {
    background: radial-gradient(circle at 30% 30%, #ff6b6b, #c92a2a, #ff8787);
  }

  .bubble1 {
    position: absolute;
    top: 0;
    width: 20px;
    height: 20px;
    background: radial-gradient(circle at 30% 30%, #edb3ff, #ac49e6, #fb87ff);
    border-radius: 50%;
    left: 8px;
    animation: dropAndShift 6s ease-in-out infinite;
    z-index: 2;
  }

  :global(.dark) .bubble1 {
    background: radial-gradient(circle at 30% 30%, #da77f2, #9c36e6, #e599ff);
  }

  .bubble2 {
    position: absolute;
    top: 0;
    width: 20px;
    height: 20px;
    background: radial-gradient(circle at 30% 30%, #b3d8ff, #4963e6, #87a7ff);
    border-radius: 50%;
    left: 32px;
    animation: dropAndShift 4s ease-in-out infinite;
    z-index: 3;
  }

  :global(.dark) .bubble2 {
    background: radial-gradient(circle at 30% 30%, #74c0fc, #4263eb, #91b3ff);
  }

  .bubble3 {
    position: absolute;
    top: 0;
    width: 20px;
    height: 20px;
    background: radial-gradient(circle at 30% 30%, #b3ffbc, #35a32f, #75ba61);
    border-radius: 50%;
    left: 15px;
    animation: dropAndShift 7s ease-in-out infinite;
    z-index: 4;
  }

  :global(.dark) .bubble3 {
    background: radial-gradient(circle at 30% 30%, #8ce99a, #2f9e44, #69db7c);
  }

  .bubble4 {
    position: absolute;
    top: 0;
    width: 20px;
    height: 20px;
    background: radial-gradient(circle at 30% 30%, #ffe066, #fab005, #ffd43b);
    border-radius: 50%;
    left: 25px;
    animation: dropAndShift 5.5s ease-in-out infinite;
    z-index: 5;
  }

  :global(.dark) .bubble4 {
    background: radial-gradient(circle at 30% 30%, #ffd43b, #f59f00, #ffe066);
  }

  /* Mobile Optimizations */
  @media (max-width: 768px) {
    .Strich1 {
      width: 60px;
      height: 60px;
    }

    .Strich2 {
      width: 45px;
      height: 45px;
    }

    .bubble,
    .bubble1,
    .bubble2,
    .bubble3,
    .bubble4 {
      width: 15px;
      height: 15px;
    }

    .bubble {
      left: 15px;
    }

    .bubble1 {
      left: 6px;
    }

    .bubble2 {
      left: 24px;
    }

    .bubble3 {
      left: 11px;
    }

    .bubble4 {
      left: 19px;
    }
  }
</style>
